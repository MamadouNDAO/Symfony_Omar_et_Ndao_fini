{% extends "base.html.twig" %}
{% block title 'Gestion des Chambres' %}
{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="jumbotron">
        <span>  Vous pouvez faire des filtres sur la liste des étudiants:</span>
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-2">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.typeEtudiant) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.departement) }}
                </div>

            </div>
            <button class="btn btn-primary float-left ">Rechercher</button>

            {{ form_end(form) }}
        </div>

    </div>

    <div class="container text-center" style="background-color: white; border: solid 1px silver; border-radius: 5px">

        <nav class="navbar bg-primary"><h1 >Liste des étudiants</h1></nav>
        <button class="btn btn-success pull-right"><a href="{{ path('save_student.index') }}">+Ajouter</a></button>
        <br><br>
        <table class="table table-responsive table-striped table-bordered">
            <thead>
            <tr>

                <th>Id</th>
                <th>Matricule</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Téléphone</th>
                <th>Type Etudiant</th>
                <th>Département</th>
                <th>room</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for row in etudiants %}

                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.matricule }}</td>
                    <td>{{ row.prenom }}</td>
                    <td>{{ row.nom }}</td>
                    <td>{{ row.mail }}</td>
                    <td>{{ row.telephone }}</td>
                    <td>{{ row.typeEtudiant }}</td>
                    <td>{{ row.departement }}</td>
                    <td>{{ row.numChambre.numChambre }}</td>

                    <td><button class="btn btn-primary"><a href="{{ path('update_room.index', {'id': row.id}) }}">Modifier</a></button></td>
                    <td><button class="btn btn-danger"><a href="{{ path('delete_student.index', {'id': row.id}) }}">Supprimer</a></button></td>


                </tr>

            {% endfor %}
            </tbody>
        </table>


        <div class="navigation text-center">
            {{ knp_pagination_render(etudiants) }}
        </div>



    </div>


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/function.js') }}"></script>
{% endblock %}